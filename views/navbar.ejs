<nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
  <div class="container-fluid">
    <a class="navbar-brand" href="/player"><%= siteName %></a>
    <div class="d-flex justify-content-right">



      <!--Channel dropdown -->
      <div class="btn-group">
        <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
          Channels
        </button>
        <ul class="dropdown-menu dropdown-menu-end">
          <% channels.forEach( (channel) => { %>
          <li><a class="dropdown-item" href="/player/<%= channel.name %>"><%= channel.title %></a></li>
          <% }) %>
        </ul>
      </div>
      <!-- End channel dropdown -->

      <!--User dropdown -->
      <div class="btn-group">
        <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
          <% if (photoUrl) {%> 
            <img class="avatar" alt="<%= username %>" src="<%= photoUrl %>"/>
          <%} else {%>
            <img class="avatar discordicon" alt="<%= username %>" src="/images/discordicon.png"/>
          <%}%>
          <%= username %>
        </button>
        <ul class="dropdown-menu dropdown-menu-end">
          <% if (renderData.streamers.has(userid)) { %>
            <li><a class="dropdown-item" href="/streamkeys">Your stream keys</a></li>
            <li><hr class="dropdown-divider"></li>
          <%}%>
          <li><a class="dropdown-item" href="/logout">Logout</a></li>
        </ul>
      </div>
      <!-- End channel dropdown -->
    </div>
  </div>
</nav>

